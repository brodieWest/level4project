<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.shape.SVGPath?>
<?import javafx.scene.text.Text?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:id="component" prefHeight="100" prefWidth="100">

    <StackPane

               fx:id="stackPane">
        <Group fx:id="svgGroup" id="input"
               onMouseClicked="#switchInputValue"
               onMouseEntered="#displayText"
               onMousePressed="#findLocation"
               onMouseDragged="#moveComponent"
               onMouseReleased="#stopMoving">
            <Group fx:id="rotatable">
                <SVGPath content="M 20 20 L 20 80 L 80 80 L 80 20 L 20 20 z" fill="0x7293cb" styleClass="component"  fx:id="svgPath"/>
            </Group>
            <Text styleClass="gateText" fx:id="text" text="0" translateX="45" translateY="55"/>
        </Group>
    </StackPane>

</AnchorPane>

