<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.shape.SVGPath?>
<?import javafx.scene.text.Text?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:id="component" prefHeight="100" prefWidth="100">

    <StackPane
               onMouseClicked="#switchInputValue"
               onMouseEntered="#displayText"
               onMousePressed="#findLocation"
               onMouseDragged="#moveComponent"
               fx:id="stackPane">
        <Group fx:id="svgGroup" id="input">
            <SVGPath content="M 0 0 L 0 60 L 60 60 L 60 0 L 0 0 z" fill="0x7293cb" styleClass="component"/>
        </Group>
        <Group StackPane.alignment="CENTER">
            <Text styleClass="gateText" fx:id="text" text="0"/>
        </Group>
    </StackPane>

</AnchorPane>

