<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.geometry.Insets?>

<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.collections.FXCollections?>
<?import ui.table.Row?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      prefWidth="200"
      spacing="10">
    <fx:define>
        <FXCollections fx:factory="observableArrayList" fx:id="tableData">
            <Row x="0" output="1"/>
            <Row x="1" output="0"/>
        </FXCollections>
    </fx:define>
    <padding>
        <Insets bottom="5" right="5" left="5" top="5"/>
    </padding>
    <Text text="Boolean logic value NOT&#10;&#10;Output value is the inverse of the input value." styleClass="descriptionText" wrappingWidth="190"/>
    <TableView fx:id="table" styleClass="truthTable">
        <items>
            <fx:reference source="tableData"/>
        </items>
        <columns>
            <TableColumn text="x" prefWidth="50">
                <cellValueFactory>
                    <PropertyValueFactory property="x"/>
                </cellValueFactory>
            </TableColumn>
            <TableColumn text="output" prefWidth="89">
                <cellValueFactory>
                    <PropertyValueFactory property="output"/>
                </cellValueFactory>
            </TableColumn>
        </columns>
    </TableView>
</VBox>
