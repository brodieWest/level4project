<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.shape.SVGPath?>
<?import javafx.scene.text.Text?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:id="component" prefHeight="100" prefWidth="100">

    <Group fx:id="svgGroup" onMouseClicked="#switchInputValue" onMouseEntered="#displayText" id="input">
        <SVGPath content="M 20 20 L 20 80 L 80 80 L 80 20 L 20 20 z" fill="0x7293cb"  styleClass="component"/>
    </Group>
    <StackPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <Group StackPane.alignment="CENTER">
            <Text text="0" fx:id="text" x="50" y="50" styleClass="gateText"/>
        </Group>
    </StackPane>

</AnchorPane>

